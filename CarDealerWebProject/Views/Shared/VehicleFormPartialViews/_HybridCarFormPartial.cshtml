@using CarDealerWebProject.Infrastructure.Data.Enums
@model CarDealerWebProject.Core.Models.Vehicle.FormModels.HybridCarFormModel


<div class="form-group">
	<label asp-for="CarBodyType" class="form-label"></label>
	<select asp-for="CarBodyType" class="form-select" asp-items="Html.GetEnumSelectList<CarBodyType>()">
		<option value="">Select car body type</option>
	</select>
	<span asp-validation-for="CarBodyType" class="small text-danger"></span>
</div>

<div class="form-group">
	<label asp-for="EngineCapacity" class="form-label"></label>
	<input asp-for="EngineCapacity" class="form-control" type="number" />
	<span asp-validation-for="EngineCapacity" class="small text-danger"></span>
</div>

<div class="form-group">
	<label asp-for="BatteryCapacity" class="form-label"></label>
	<input asp-for="BatteryCapacity" class="form-control" type="number" />
	<span asp-validation-for="BatteryCapacity" class="small text-danger"></span>
</div>

