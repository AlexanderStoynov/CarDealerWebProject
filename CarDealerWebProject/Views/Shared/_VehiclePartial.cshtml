@model VehicleServiceModel

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.VehicleImage" alt="Vehicle Image">
        <div class="card-body text-center">
            <h4>@Model.Make @Model.Model</h4>
            <h6>Price: <b>@String.Format("{0:f2}", Model.Price) BGN</b></h6>
            <br />
            <a asp-controller="Vehicle" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-success">Details</a>
            @if (this.User.Identity!.IsAuthenticated &&
            (User.IsInRole("Admin") || User.IsInRole("Seller")))
            {
                <a asp-controller="Vehicle" asp-action="Edit" asp-route-id="@Model.Id"
                   class="btn btn-warning">Edit</a>
                <a asp-controller="House" asp-action="Delete" asp-route-id="@Model.Id"
                   class="btn btn-danger">Delete</a>
                <p></p>
            }
        </div>
    </div>
</div>
