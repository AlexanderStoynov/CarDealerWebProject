@model SellerServiceModel

<h3>Are you sure you want to delete @Model.FullName (@Model.Email)?</h3>

<form asp-area="Admin" asp-controller="SellerManagement" asp-action="DeleteSeller" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-area="Admin" asp-controller="SellerManagement" asp-action="AllSellers" class="btn btn-secondary">Cancel</a>
</form>